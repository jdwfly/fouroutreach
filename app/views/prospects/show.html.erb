<% content_for :content_head do %>
  <h1><%= @prospect.name %></h1>
<% end %>
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Last Contacted: </strong><%= @prospect.last_update %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <strong>Address</strong><br>
        <%= @prospect.address %><br>
        <%= @prospect.city %>, <%= @prospect.state %> <%= @prospect.zip %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Phone: </strong><%= number_to_phone @prospect.phone %><br>
          <strong>Email: </strong><%= @prospect.email %><br>
          <strong>Point of Contact: </strong><%= @prospect.point_of_contact %><br>
          <strong>Interests: </strong><%= @prospect.interests %><br>
        </p>
        <p>
          <strong>Date First Contacted: </strong><%= @prospect.date_first_contact %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <strong>Comments</strong>
        <p>
          <%= @prospect.comments || "None" %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h3>Followups</h3>
        <%= link_to "Record Followup", new_prospect_followup_path(@prospect), class: 'btn btn-primary' %>
        <% if @prospect.followups %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Visit Type</th>
              <th>Comments</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <%= render @prospect.followups.sorted, prospect: @prospect %>
          </tbody>
        </table>
        <% else %>
          <p>No followups recorded for this prospect.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
